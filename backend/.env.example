# Backend Environment Variables

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=careerblast
DB_USERNAME=postgres
DB_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure
JWT_EXPIRATION=86400000

# Razorpay Configuration
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# AWS S3 Configuration
AWS_S3_BUCKET_NAME=careerblast-resumes
AWS_S3_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_PRESIGNED_URL_EXPIRATION=3600
AWS_S3_MAX_FILE_SIZE=10485760
AWS_S3_ALLOWED_FILE_TYPES=pdf,doc,docx

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Application Configuration
APP_BASE_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://*.vercel.app,https://career-blast*.vercel.app

# Logging
LOGGING_LEVEL=INFO
